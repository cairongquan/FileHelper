#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/bin/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/bin/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/livereload@0.9.3/node_modules:/Users/cairongquan/FileHelper/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/livereload.js" "$@"
else
  exec node  "$basedir/../../bin/livereload.js" "$@"
fi
